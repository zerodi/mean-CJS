section(data-ng-controller='ArticlesController', data-ng-init='findOne()')
    form.form-horizontal.col-md-6(role='form', data-ng-submit='update()')
        .form-group
            label.col-md-2.control-label(for='title') Title
            .col-md-10
                input#title.form-control(type='text', data-ng-model='article.title', placeholder='Title', required='required')
        .form-group
            label.col-md-2.control-label(for='content') Content
            .col-md-10
                textarea#content.form-control(data-ng-model='article.content', cols='30', rows='10', placeholder='Content', required='required')
        .form-group
            .col-md-offset-2.col-md-10
                button.btn.btn-default(type='submit') Submit